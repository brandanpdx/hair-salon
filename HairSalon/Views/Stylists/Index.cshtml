@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<div class="container">
  <div class="row">
    <div class="col">

    </div>
    <div class="col">
      <div class="center">
        <h1>List of Stylists</h1>

        @if (@Model.Count == 0)
        {
          <h3>No stylists have been added yet!</h3>
        } 

        @foreach (Stylist stylist in Model)
        {
          <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
        }
        <div class="buttons">
          <p>@Html.ActionLink("Add new stylist", "Create", new { @class = "btn btn-dark btn-large" })</p>

          <p>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-dark btn-large" })</p>
        </div>
      </div>
    </div>
    <div class="col">

    </div>
  </div>
</div>